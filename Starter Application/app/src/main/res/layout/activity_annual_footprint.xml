<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/Planetze"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/planetze_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/Annual_Carbon_Footprint"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:fontFamily="@font/open_sans_bold"
        android:textAlignment="center"
        android:textColor="@color/text_dark"
        android:textSize="18dp"
        android:layout_marginTop="48dp"
        android:text="Total annual carbon Footprint: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Planetze"/>

    <TextView
        android:id="@+id/transportation_emissions"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Transportation: "
        android:textAlignment="viewStart"
        android:textColor="@color/primary_accent"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Annual_Carbon_Footprint"/>

    <TextView
        android:id="@+id/food_emissions"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Food: "
        android:textAlignment="viewStart"
        android:textColor="@color/primary_accent"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transportation_emissions"/>

    <TextView
        android:id="@+id/housing_emissions"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Housing: "
        android:textAlignment="viewStart"
        android:textColor="@color/primary_accent"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_emissions"/>

    <TextView
        android:id="@+id/consumption_emissions"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Consumption: "
        android:textAlignment="viewStart"
        android:textColor="@color/primary_accent"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/housing_emissions" />

    <TextView
        android:id="@+id/total_emissions"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Total: "
        android:textAlignment="viewStart"
        android:textColor="@color/text_dark"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consumption_emissions" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:backgroundTint="@color/primary_accent"
        android:lineSpacingExtra="10sp"
        android:text="Next"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/total_emissions"/>

    <FrameLayout
        android:id="@+id/penguin_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/penguin_image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/planetze_penguin"
            android:layout_gravity="center"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>