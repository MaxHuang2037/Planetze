<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- activity_register.xml -->

        <ImageView
            android:id="@+id/Planetze"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/planetze_logo"
            app:layout_constraintBottom_toTopOf="@+id/verificationMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

        <TextView
            android:id="@+id/verificationMessage"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Please check your email to verify your account before logging in."
            android:textAlignment="center"
            android:textColor="@color/text_dark"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Planetze"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/resendVerificationButton"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:backgroundTint="@color/primary_accent"
            android:text="Send verification email"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/verificationMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="After verifying, you can log in to your account"
            android:textAlignment="center"
            android:textColor="@color/text_dark"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resendVerificationButton"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:backgroundTint="@color/primary_accent"
            android:lineSpacingExtra="10sp"
            android:text="Back"
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/penguin_image"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/penguin_image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/planetze_penguin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0"
            tools:layout_editor_absoluteY="550dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>